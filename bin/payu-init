#!/usr/bin/env python
# coding: utf-8

# Standard library
import argparse

# Local
import payu.model

#---
def payu_init(model_name, config_path):

    model = payu.model.index[model_name]
    expt = model()
    expt.init()


if __name__ == '__main__':

    # TODO: Need to inherit payu_parse! This is temporary
    parser = argparse.ArgumentParser()

    parser.add_argument('-m', '--model',
                        action='store',
                        dest='model_name',
                        default=None,
                        help='Select model type')

    parser.add_argument('-c', '--config',
                        action='store',
                        dest='config_path',
                        default=None,
                        help='Configuration path')

    args = vars(parser.parse_args())
    payu_init(**args)
